<div class="row mb-4">
  <div class="col">
    <h2>
      Task "<%= @load_task.title %>"
    </h2>
  </div>

  <div class="col-sm-auto">
    <%= link_to 'Edit', [:edit, @load_task], class: 'btn btn-primary', 'up-target': '.task' %>
    <%= link_to 'Delete', @load_task, method: :delete, 'up-follow': '', class: 'btn btn-danger mr-3' %>
  </div>
</div>

<dl class="my-8">
  <dt>Text</dt>
  <p style="white-space: pre-line;">
    <%= @load_task.text %>
  </p>
  <dt>Type</dt>
  <p>
    <%= @load_task.types %>
  </p>
  <dt>Points</dt>
  <p>
    <%= @load_task.points %>
  </p>
  <dt>Due date</dt>
  <p>
    <%= @load_task.due_date %> 
  </p>
</dl>