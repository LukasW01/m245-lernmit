<%= form_for @load_task, html: { 'up-target': '.task', class: 'task-card card' } do |form| %>
  <div class="card-body d-flex flex-column">
    <div class="form-group flex-grow-1 mb-0">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control', autofocus: true %>
      <%= form.error_message :title %>
    </div>
    <div class="form-group flex-grow-1 mb-0">
      <%= form.label :text %>
      <%= form.text_area :text, class: 'form-control', autofocus: true, rows: 3 %>
      <%= form.error_message :text %>
    </div>
    <div class="form-group flex-grow-1 mb-0">
      <%= form.label :types %>
      <%= form.select :types, options_for_select(["Task","Exam"]), {}, class: "form-select" %>
      <%= form.error_message :types %>
    </div>
    <div class="form-group flex-grow-0 mb-0">
      <%= form.label :due_date %>
      <%= form.datetime_field :due_date, class: 'form-control' %>
      <%= form.error_message :due_date %>
    </div>
    <div class="form-group flex-grow-0 mb-0">
      <%= form.label :points %>
      <%= form.number_field :points, class: 'form-control' %>
      <%= form.error_message :points %>
    </div>
    <div class="flex-grow-0">
      <%= form.submit "Add Task", class: 'btn btn-primary mt-2' %>
    </div>
  </div>
<% end %>
