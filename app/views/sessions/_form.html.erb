<%= form_for :session, url: session_path, html: { class: "space-y-6" } do |form| %>
<div>
  <%= form.label :email, class: 'block text-sm font-medium leading-6 text-gray-700 dark:text-gray-300', for: 'email' do %>Email address<% end %>
  <div class="mt-2">
    <%= form.email_field :email, autocomplete: 'username', class: 'dark:bg-gray-900 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 dark:border-gray-500 rounded-md dark:text-gray-300', id: 'email', placeholder: 'mail@example.com' %>
  </div>
</div>

<div>
  <%= form.label :password, class: 'block text-sm font-medium leading-6 text-gray-700 dark:text-gray-300', for: 'password' do %>
    Password
  <% end %>
  <div class="mt-2">
    <%= form.password_field :password, autocomplete: 'password', class: 'dark:bg-gray-900 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 dark:border-gray-500 rounded-md dark:text-gray-300', id: 'password' %>
  </div>
</div>

<div class="flex items-center justify-between">
  <div class="flex items-center">
    <input id="checkbox" type="checkbox" value="" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
    <label for="checkbox" class="ml-3 block text-sm leading-6 text-gray-700 dark:text-gray-300">Remember me</label>
  </div>

  <div class="text-sm leading-6">
    <%= link_to 'Forgot password?', new_password_path, class: 'text-indigo-600 hover:text-indigo-500', 'up-follow': ''%>
  </div>
</div>

<div>
  <%= form.submit "Sign in â†’", class: 'flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' %>
</div>
<% end %>

<p class="text-center text-gray-600 dark:text-gray-500 text-xs mt-4">Don't have an account? <%= link_to 'Register', sign_up_path, class: 'underline text-gray-800 dark:text-gray-50', 'up-follow': ''%> instead.</p>
