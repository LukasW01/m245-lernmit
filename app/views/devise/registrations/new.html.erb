<div id="clearance" class="auth">
  <div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
      <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight dark:text-gray-100">Sign up</h2>
    </div>
    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
      <div class="bg-white dark:bg-gray-800 px-6 py-12 shadow sm:rounded-lg pt-6 pb-12 pl-12 pr-12">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |form| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div>
            <%= form.label :email, class: 'block text-sm font-medium leading-6 text-gray-700 dark:text-gray-300', for: 'email' do %>Email address<% end %>
            <div class="mt-2">
              <%= form.email_field :email, class: 'dark:bg-gray-900 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 dark:border-gray-500 rounded-md dark:text-gray-300', id: 'email', placeholder: 'mail@example.com' %>
            </div>
          </div>

          <div>
            <%= form.label :password, class: 'block text-sm font-medium leading-6 text-gray-700 dark:text-gray-300', for: 'password' do %>
              Password
            <% end %>
            <div class="mt-2">
              <%= form.password_field :password, class: 'dark:bg-gray-900 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 dark:border-gray-500 rounded-md dark:text-gray-300', id: 'password' %>
            </div>
          </div>

          <div>
            <%= form.label :password_confirmation, class: 'block text-sm font-medium leading-6 text-gray-700 dark:text-gray-300', for: 'password' do %>
              Password conformation
            <% end %>
            <div class="mt-2">
              <%= form.password_field :password_confirmation, class: 'dark:bg-gray-900 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 dark:border-gray-500 rounded-md dark:text-gray-300', id: 'password'.class %>
            </div>
          </div>
          
          <div>
            <%= form.submit "Sign up â†’", class: 'flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<p class="text-center text-gray-600 dark:text-gray-500 text-xs mt-4">Already have an account? <%= link_to link_to t(".sign_in"), new_session_path(resource_name), class: 'underline text-gray-800 dark:text-gray-50', 'up-follow': ''%> instead.</p>

